@model IEnumerable<ProdutoModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Cadastrar">Create New</a>
</p>
@if (Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nome</th>
                <th>
                    Preço
                </th>
                <th>Categoria</th>
                <th>Opções</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var s in Model)
            {
                <tr>
                    <td>
                        @s.Nome
                    </td>
                    <td>
                        @s.Preco.ToString("F2")
                    </td>
                    <td>
                       @s.Categoria.Nome 
                    </td>
                    <th>
                        <a asp-action="Detalhe">Detalhes</a>
                        <a asp-action="Apagar">Apagar</a>
                    </th>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <p>Lista esta vazia</p>
}