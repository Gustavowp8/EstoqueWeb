@model IEnumerable<CategoriaModel>
@{
    ViewData["Title"] = "Lista de Categorias";
}

<div>
    <h3>Lista de categorias</h3>
    <a asp-action="Adicionar">Adicionar categoria</a>
</div>

<div>

    @if (Model.Count() > 0)
    {
        <table class="table table-striped">

            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Opção</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var cat in Model)
                {
                    <tr>
                        <td>@cat.Nome</td>
                        <td>
                            <a asp-action="Apagar" asp-route-id="@cat.IdCategoria" class="btn btn-sm btn-danger">Apagar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Lista vazia</p>
    }

</div>