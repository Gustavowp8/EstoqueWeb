@model EstoqueWeb.Models.CategoriaModel
@{
    ViewData["Title"] = "Lista de categorias";
}

<div>

    <form asp-action="Adicionar">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">

            <label asp-for="Nome" class="control-label">Nome da categoria</label><br />
            <input asp-for="Nome" class="control-control" />
            <span asp-validation-for="Nome"></span>

        </div><br />

        <div class="form-group">

            <input type="submit" class="btn btn-success" value="Cadastrar" />

        </div>

    </form>

</div>