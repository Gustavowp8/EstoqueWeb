@model IEnumerable<UsuarioModel>
@{
    ViewData["Title"] = "Lista de usuarios";
}

<div>
    <h3>Lista de usuarios</h3>
    <a asp-action="CriarUsuario">Adicionar usuario</a>
</div>
<div>

    @if (Model.Count() > 0)
    {
        <table class="table table-striped">

            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Login</th>
                    <th>Opções</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var usuarios in Model)
                {
                    <tr>
                        <td>@usuarios.Nome</td>
                        <td>@usuarios.Login</td>
                        <td>
                            <a asp-action="Editar" asp-route-id="IdUsuario" class="btn btn-sm btn-secondary">Editar</a>
                            <a asp-action="Apagar" asp-route-id="@usuarios.IdUsuario" class="btn btn-sm btn-danger">Apagar</a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    }
    else
    {
        
    }

</div>